<resources>
    <!-- Primary (filled) button -->
    <style name="Widget.Yogis.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/urbanist_medium</item>
    </style>

    <!-- Secondary (outlined) button -->
    <style name="Widget.Yogis.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/urbanist_medium</item>
    </style>

    <!-- Back Button -->
    <style name="Widget.Yogis.Button.Back" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconTint">@color/black</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
